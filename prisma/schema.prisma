generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}


model Organization {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  campaigns Campaign[]
  donors    Donor[]
  segments  Segment[]
  users     User[]
  workflows Workflow[]

  @@map("organizations")
}

model User {
  id                 String              @id @default(cuid())
  email              String              @unique
  password           String
  firstName          String
  lastName           String
  role               UserRole            @default(STAFF)
  organizationId     String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  activityLogs       ActivityLog[]
  sessions           Session[]
  assignedTasks      Task[]
  organization       Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  workflowExecutions WorkflowExecution[]

  @@index([organizationId])
  @@index([email])
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model Donor {
  id             String          @id @default(cuid())
  organizationId String
  firstName      String
  lastName       String
  email          String?
  phone          String?
  address        String?
  city           String?
  state          String?
  zipCode        String?
  donorPassword  String?         // Stores donor user password (hashed or plain)
  status         DonorStatus     @default(ACTIVE)
  retentionRisk  RetentionRisk   @default(UNKNOWN)
  totalGifts     Int             @default(0)
  totalAmount    Float           @default(0)
  firstGiftDate  DateTime?
  lastGiftDate   DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  donations      Donation[]
  organization   Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  interactions   Interaction[]
  segmentMembers SegmentMember[]
  tasks          Task[]

  @@index([organizationId])
  @@index([email])
  @@index([retentionRisk])
  @@index([status])
  @@map("donors")
}

model Campaign {
  id             String         @id @default(cuid())
  organizationId String
  name           String
  description    String?
  goal           Float?
  startDate      DateTime?
  endDate        DateTime?
  type           String?
  status         CampaignStatus @default(DRAFT)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  donations      Donation[]

  @@index([organizationId])
  @@index([status])
  @@map("campaigns")
}

model Donation {
  id         String       @id @default(cuid())
  donorId    String
  campaignId String?
  amount     Float
  date       DateTime
  type       DonationType @default(ONE_TIME)
  method     String?
  notes      String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  campaign   Campaign?    @relation(fields: [campaignId], references: [id])
  donor      Donor        @relation(fields: [donorId], references: [id], onDelete: Cascade)

  @@index([donorId])
  @@index([campaignId])
  @@index([date])
  @@map("donations")
}

model Interaction {
  id          String          @id @default(cuid())
  donorId     String
  type        InteractionType
  subject     String?
  notes       String?
  date        DateTime
  createdById String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  donor       Donor           @relation(fields: [donorId], references: [id], onDelete: Cascade)

  @@index([donorId])
  @@index([date])
  @@map("interactions")
}

model Task {
  id           String       @id @default(cuid())
  donorId      String?
  assignedTo   String?
  title        String
  description  String?
  status       TaskStatus   @default(TODO)
  priority     TaskPriority @default(MEDIUM)
  dueDate      DateTime?
  completedAt  DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  assignedUser User?        @relation(fields: [assignedTo], references: [id])
  donor        Donor?       @relation(fields: [donorId], references: [id], onDelete: Cascade)

  @@index([donorId])
  @@index([assignedTo])
  @@index([status])
  @@index([dueDate])
  @@map("tasks")
}

model Segment {
  id             String          @id @default(cuid())
  organizationId String
  name           String
  description    String?
  rules          Json
  memberCount    Int             @default(0)
  lastCalculated DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  members        SegmentMember[]
  organization   Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  workflows      Workflow[]

  @@index([organizationId])
  @@map("segments")
}

model SegmentMember {
  id        String   @id @default(cuid())
  segmentId String
  donorId   String
  createdAt DateTime @default(now())
  donor     Donor    @relation(fields: [donorId], references: [id], onDelete: Cascade)
  segment   Segment  @relation(fields: [segmentId], references: [id], onDelete: Cascade)

  @@unique([segmentId, donorId])
  @@index([segmentId])
  @@index([donorId])
  @@map("segment_members")
}

model Workflow {
  id             String              @id @default(cuid())
  organizationId String
  segmentId      String?
  name           String
  description    String?
  trigger        WorkflowTrigger
  steps          Json
  isActive       Boolean             @default(false)
  executionCount Int                 @default(0)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  executions     WorkflowExecution[]
  organization   Organization        @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  segment        Segment?            @relation(fields: [segmentId], references: [id])

  @@index([organizationId])
  @@index([segmentId])
  @@index([isActive])
  @@map("workflows")
}

model WorkflowExecution {
  id           String    @id @default(cuid())
  workflowId   String
  executedById String?
  status       String
  progress     Json?
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  error        String?
  executedBy   User?     @relation(fields: [executedById], references: [id])
  workflow     Workflow  @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([status])
  @@map("workflow_executions")
}

model ActivityLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  entity    String
  entityId  String
  changes   Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entity, entityId])
  @@index([createdAt])
  @@map("activity_logs")
}

enum UserRole {
  ADMIN
  STAFF
  MARKETING
  READONLY
  DONOR
}

enum DonorStatus {
  ACTIVE
  LAPSED
  INACTIVE
  DO_NOT_CONTACT
}

enum RetentionRisk {
  UNKNOWN
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DonationType {
  ONE_TIME
  RECURRING
  PLEDGE
  IN_KIND
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum WorkflowTrigger {
  FIRST_DONATION
  DONATION_RECEIVED
  INACTIVITY_THRESHOLD
  SEGMENT_ENTRY
  MANUAL
  SCHEDULED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum InteractionType {
  EMAIL
  PHONE_CALL
  MEETING
  NOTE
}
